@model CodeFirst_13Bang.Models.NhanVien

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<CodeFirst_13Bang.Models.CuaHang> cuaHangs = ViewData["cuahang"] as List<CodeFirst_13Bang.Models.CuaHang>;
    List<CodeFirst_13Bang.Models.ChucVu> chucVus = ViewData["chucvu"] as List<CodeFirst_13Bang.Models.ChucVu>;
}


<h1>Xóa nhân viên</h1>

<h3>Bạn có chắc muốn xóa nhân viên này không?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Mã
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ma)
        </dd>
        <dt class="col-sm-2">
            Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ho) @Html.DisplayFor(model => model.TenDem) @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class="col-sm-2">
            Giới tính
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.GioiTinh == 1 ? "Nam" : "Nữ")
        </dd>
        <dt class="col-sm-2">
            Ngày sinh
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class="col-sm-2">
            Địa chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class="col-sm-2">
            Số điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sdt)
        </dd>
        <dt class="col-sm-2">
            Mật khẩu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
        <dt class="col-sm-2">
            Trạng thái
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.TrangThai == 1 ? "Đang làm việc" : "Đang nghỉ làm")
        </dd>
        <dt class="col-sm-2">
            Cửa hàng
        </dt>
        <dd class="col-sm-10">
            @foreach (var x in cuaHangs)
            {
                if (Model.IdCH == x.Id)
                {
                    @Html.DisplayFor(model => x.Ten)
                }
            }
        </dd>
        <dt class="col-sm-2">
            Chức vụ
        </dt>
        <dd class="col-sm-10">
            @foreach (var x in chucVus)
            {
                if (Model.IdCV == x.Id)
                {
                    @Html.DisplayFor(model => x.Ten)
                }
            }
        </dd>
        <dt class="col-sm-2">
            Báo cáo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdGuiBc)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-warning">Quay lại danh sách</a>
    </form>
</div>
