@model CodeFirst_13Bang.Models.NSX

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa nhà sản xuất</h1>

<h3>Bạn có chắc muốn xóa nhà sản xuất nay không?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Mã
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ma)
        </dd>
        <dt class = "col-sm-2">
           Tên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-warning">Back to List</a>
    </form>
</div>
