@model IEnumerable<CodeFirst_13Bang.Models.NSX>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Update", new { item.Id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Chi tiết", "Chitiet", new { item.Id }) |
                    @Html.ActionLink("Xóa", "Delete", new { item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
