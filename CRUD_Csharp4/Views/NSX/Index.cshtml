@model IEnumerable<CodeFirst_13Bang.Models.NSX>


@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách nhà sản xuất</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Mã
            </th>
            <th>
               Tên
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ma)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Update", new { item.Id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Chi tiết", "Chitiet", new { item.Id }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Xóa", "Delete", new { item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
