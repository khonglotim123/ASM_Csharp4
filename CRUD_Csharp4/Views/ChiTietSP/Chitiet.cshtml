@model CodeFirst_13Bang.Models.ChiTietSP

@{
    ViewData["Title"] = "Chitiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<CodeFirst_13Bang.Models.SanPham> sanPham = ViewData["sanpham"] as List<CodeFirst_13Bang.Models.SanPham>;
    List<CodeFirst_13Bang.Models.MauSac> mauSacs = ViewData["mausac"] as List<CodeFirst_13Bang.Models.MauSac>;
    List<CodeFirst_13Bang.Models.DongSP> dongSPs = ViewData["dongsp"] as List<CodeFirst_13Bang.Models.DongSP>;
    List<CodeFirst_13Bang.Models.NSX> nSXes = ViewData["nsx"] as List<CodeFirst_13Bang.Models.NSX>;
}

<h1>Chi tiết nè</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Id sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Năm bảo hành
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NamBH)
        </dd>
        <dt class = "col-sm-2">
            Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class = "col-sm-2">
           Số lượng tồn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoLuongTon)
        </dd>
        <dt class = "col-sm-2">
           Giá nhập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GiaNhap)
        </dd>
        <dt class = "col-sm-2">
           Giá bán
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GiaBan)
        </dd>
        <dt class = "col-sm-2">
           Sản phẩm
        </dt>
        <dd class="col-sm-10">
            @foreach (var x in sanPham)
            {
                if (Model.IdSP == x.Id)
                {
                    @Html.DisplayFor(model => x.Ten)
                }
            }
        </dd>
        <dt class = "col-sm-2">
           Nhà sản xuất
        </dt>
        <dd class="col-sm-10">
            @foreach (var x in nSXes)
            {
                if (Model.IdNsx == x.Id)
                {
                    @Html.DisplayFor(model => x.Ten)
                }
            }
        </dd>
        <dt class = "col-sm-2">
           Màu sắc
        </dt>
        <dd class="col-sm-10">
            @foreach (var x in mauSacs)
            {
                if (Model.IdMauSac == x.Id)
                {
                    @Html.DisplayFor(model => x.Ten)
                }
            }
        </dd>
        <dt class = "col-sm-2">
           Dòng sản phẩm
        </dt>
        <dd class="col-sm-10">
            @foreach (var x in dongSPs)
            {
                if (Model.IdDongSP == x.Id)
                {
                    @Html.DisplayFor(model => x.Ten)
                }
            }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Sửa", "Sua", new { Model.Id }, new {@class="btn btn-primary" }) |
    <a asp-action="Index" class="btn btn-warning">Quay lại danh sách</a>
</div>
