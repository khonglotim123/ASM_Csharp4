@model CodeFirst_13Bang.Models.KhachHang

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa khách hàng</h1>

<h3>Bạn có chắc muốn xóa khách hàng này không?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
           Mã
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ma)
        </dd>
        <dt class = "col-sm-2">
           Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ho) @Html.DisplayFor(model => model.TenDem) @Html.DisplayFor(model => model.Ten)
        </dd>        
        <dt class = "col-sm-2">
           Ngày Sinh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class = "col-sm-2">
            Số điện thoại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sdt)
        </dd>
        <dt class = "col-sm-2">
           Địa chỉ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class = "col-sm-2">
          Thành phố
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ThanhPho)
        </dd>
        <dt class = "col-sm-2">
          Quốc gia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuocGia)
        </dd>
        <dt class = "col-sm-2">
           Mật khẩu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-warning">Quay lại danh sách</a>
    </form>
</div>
