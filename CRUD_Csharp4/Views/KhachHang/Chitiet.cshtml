@model CodeFirst_13Bang.Models.KhachHang

@{
    ViewData["Title"] = "Chitiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết khách hàng</h1>

<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
           Mã
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ma)
        </dd>
        <dt class = "col-sm-2">
           Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ho) @Html.DisplayFor(model => model.TenDem) @Html.DisplayFor(model => model.Ten)
        </dd>       
        <dt class = "col-sm-2">
           Ngày sinh
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class = "col-sm-2">
           Số điện thoại
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sdt)
        </dd>
        <dt class = "col-sm-2">
           Địa chỉ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class = "col-sm-2">
           Thành phố
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ThanhPho)
        </dd>
        <dt class = "col-sm-2">
          Quốc gia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuocGia)
        </dd>
        <dt class = "col-sm-2">
           Mật khẩu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MatKhau)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Sửa", "Update", new { Model.Id }, new { @class = "btn btn-primary" }) |
    <a asp-action="Index" class="btn btn-warning">Quay lại danh sách</a>
</div>
